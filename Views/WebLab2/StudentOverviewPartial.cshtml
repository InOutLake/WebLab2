@model Weblab2.Models.Student
<div class="row">
    <div class="col-md-4">@(Model.LastName + " " + Model.FirstName + " " + Model.MiddleName)</div>
    <div class="col-md-2">@await Component.InvokeAsync("FindStudentGroup", new { studentId = Model.StudentId })</div>
    <div class="col-md-2">@Model.Birthdate.ToShortDateString()</div>
    <div class="col-md-2">@Html.ActionLink("Details", "ModelDetails", "WebLab2", new { ModelId = Model.StudentId }, new { @class = "btn btn-default", style = "border: 1px solid #000;" })</div>
    <div class="col-md-1">@Html.ActionLink("Edit", "EditModel", "WebLab2", new { ModelId = Model.StudentId }, new { @class = "btn btn-default", style = "border: 1px solid #000;" })</div>
    <div class="col-md-1">@Html.ActionLink("Delete", "DeleteModel", "WebLab2", new { ModelId = Model.StudentId }, new { @class = "btn btn-danger" })</div>
</div>